# Confluence Enhancer AI - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=true
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Oracle Database Settings
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=XE
ORACLE_USER=confluence_user
ORACLE_PASSWORD=your_oracle_password_here

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ===========================================
# AI API CONFIGURATION
# ===========================================
# OpenAI Settings (Primary AI Engine)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Anthropic Settings (Backup AI Engine)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===========================================
# CONFLUENCE API CONFIGURATION
# ===========================================
CONFLUENCE_BASE_URL=https://your-company.atlassian.net
CONFLUENCE_USERNAME=your_confluence_username
CONFLUENCE_API_TOKEN=your_confluence_api_token

# OAuth 2.0 Settings (Alternative to API Token)
CONFLUENCE_CLIENT_ID=your_oauth_client_id
CONFLUENCE_CLIENT_SECRET=your_oauth_client_secret
CONFLUENCE_REDIRECT_URI=http://localhost:8000/auth/callback

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production-must-be-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ===========================================
# PROCESSING SETTINGS
# ===========================================
MAX_CONTENT_SIZE=10485760
MAX_PROCESSING_TIME=300
CHUNK_SIZE=4000
MAX_CONCURRENT_REQUESTS=10

# ===========================================
# VISUALIZATION SETTINGS
# ===========================================
MAX_CHART_DATA_POINTS=10000
DEFAULT_CHART_HEIGHT=400
DEFAULT_CHART_WIDTH=600
CHART_CACHE_TTL=3600

# ===========================================
# CACHING CONFIGURATION
# ===========================================
# Redis Settings (Optional but recommended)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/confluence_enhancer.log

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# File Storage (for exports and cached files)
STORAGE_TYPE=local  # Options: local, s3, azure
STORAGE_PATH=./storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=confluence-enhancer-storage

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
